@model IEnumerable<CRM.Models.VPorcentajeVentasPorDepartamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Porcentaje de ventas por departamento</h1>

<div class="container">
    <form class="form" method="POST">
        <div>
            <label>Fecha inicio</label>
            <input type="date" id="inicio" name="inicio" />
        </div>
        <div>
            <label>Fecha fin</label>
            <input type="date" id="fin" name="fin" />
        </div>
            <button class="btn btn-success" id="form-btn" asp-controller="VPorcentajeVentasPorDepartamentos" asp-action="Filtrar">Filtrar</button>
    </form>
</div>

<div id="chart_div"></div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PorcentajeDeVentas)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <script>
            elements.push(["@item.Departamento", @item.PorcentajeDeVentas]);
        </script>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PorcentajeDeVentas) %
            </td>
        </tr>
}
    </tbody>
</table>


