@model IEnumerable<CRM.Models.VFamiliaProductosVendido>

@{
    ViewData["Title"] = "Index";
}

<h1>Familias de productos vendidos</h1>


<div class="container">
    <form class="form" method="POST">
        <div>
            <label>Fecha inicio</label>
            <input type="date" id="inicio" name="inicio" />
        </div>
        <div>
            <label>Fecha fin</label>
            <input type="date" id="fin" name="fin" />
        </div>
            <button class="btn btn-success" id="form-btn" asp-controller="VFamiliaProductosVendidos" asp-action="Filtrar">Filtrar</button>
    </form>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Familia)
            </th><th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Familia)
            </td>
            <td>
                ₡ @Html.DisplayFor(modelItem => item.Monto)
            </td>
        </tr>
}
    </tbody>
</table>
