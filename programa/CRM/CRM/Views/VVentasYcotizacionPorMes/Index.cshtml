@model IEnumerable<CRM.Models.VVentasYcotizacionPorMe>

@{
    ViewData["Title"] = "Index";
}

<h1>Ventas y cotizaciones por mes</h1>
<div class="container">
    <form class="form" method="POST">
        <div>
            <label>Fecha inicio</label>
            <input type="date" id="inicio" name="inicio" />
        </div>
        <div>
            <label>Fecha fin</label>
            <input type="date" id="fin" name="fin" />
        </div>
        <button class="btn btn-success" id="form-btn" asp-controller="VVentasYcotizacionPorMes" asp-action="Filtrar">Filtrar</button>
        <button class="btn btn-secondary" id="form-btn" asp-controller="VVentasYcotizacionPorMes" asp-action="Index">Quitar filtro</button>
    </form>
</div>

<div id="chart_div"></div>

<table class="table th-inner sortable both"
       id="table"
       data-toggle="table"
       data-search="false"
       data-show-columns="false"
       data-show-multi-sort="true"
       data-sort-priority='[{"sortName": "Mes","sortOrder":"desc"},{"sortName":"Ventas","sortOrder":"desc"},{"sortName":"Cotizaciones","sortOrder":"desc"}]'>
    <thead>
        <tr>
            <th data-field="Cotizaciones" data-sortable="true">Cotizaciones</th>
            <th data-field="Ventas" data-sortable="true">Ventas</th>
            <th data-field="Mes" data-sortable="true">Mes</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <script>
                elements.push(["@item.Mes", @item.Cotizaciones, @item.Ventas]);
            </script>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cotizaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ventas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mes)
            </td> 
            
        </tr>
}
    </tbody>
</table>


@*se indican el titulo, las dimensiones y las columnas que tendrá el grafico*@
