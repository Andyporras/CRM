@model IEnumerable<CRM.Models.VCotizacionYventasDepartamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Cotizacion y ventas por departamentos</h1>

<div class="container">
    <form class="form" method="POST">
        <div>
            <label>Fecha inicio</label>
            <input type="date" id="inicio" name="inicio" />
        </div>
        <div>
            <label>Fecha fin</label>
            <input type="date" id="fin" name="fin" />
        </div>
        <button class="btn btn-success" id="form-btn" asp-controller="VCotizacionYventasDepartamentos" asp-action="Filtrar">Filtrar</button>
        <button class="btn btn-secondary" id="form-btn" asp-controller="VCotizacionYventasDepartamentos" asp-action="Index">Quitar filtro</button>
    </form>
</div>

<div id="chart_div">
    
</div>

<table class="table th-inner sortable both"
       id="table"
       data-toggle="table"
       data-search="false"
       data-show-columns="false"
       data-show-multi-sort="true"
       data-sort-priority='[{"sortName": "Departamento","sortOrder":"desc"},{"sortName":"Ventas","sortOrder":"desc"},{"sortName":"Cotizaciones","sortOrder":"desc"}]'>
    <thead>
        <tr>
            <th data-field="Departamento" data-sortable="true">Departamento</th>
            <th data-field="Ventas" data-sortable="true">Ventas</th>
            <th data-field="Cotizaciones" data-sortable="true">Cotizaciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <script>
                elements.push(["@item.Departamento", @item.Ventas, @item.Cotizaciones]);
        </script>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ventas)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cotizaciones)
        </tr>
}
    </tbody>
</table>

